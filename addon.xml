<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.itunesconverter"
       name="iTunes Playlist Converter"
       version="1.0.3"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">iTunes Playlist Converter</summary>
    <summary lang="ja">iTunesプレイリストコンバータ</summary>
    <description lang="en">Convert iTunes playlists to m3u/html</description>
    <description lang="ja">iTunesプレイリストをm3u/htmlに変換します</description>
    <disclaimer lang="en">Works on Windows &amp; MacOSX</disclaimer>
    <disclaimer lang="ja">WindowsとMacOSXで動作</disclaimer>
  </extension>
</addon>
